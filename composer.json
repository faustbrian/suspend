{
  "name": "cline/suspend",
  "description": "A flexible suspension and banning system for Laravel with pluggable strategies and resolvers",
  "license": "MIT",
  "keywords": [
    "ban",
    "banning",
    "block",
    "geolocation",
    "ip-blocking",
    "laravel",
    "moderation",
    "php",
    "suspend",
    "suspension"
  ],
  "authors": [
    {
      "name": "Brian Faust",
      "email": "brian@cline.sh"
    }
  ],
  "require": {
    "php": "^8.5.0",
    "illuminate/contracts": "^11.0 || ^12.0",
    "illuminate/database": "^11.0 || ^12.0",
    "illuminate/http": "^11.0 || ^12.0",
    "illuminate/support": "^11.0 || ^12.0",
    "spatie/laravel-package-tools": "^1.92.7"
  },
  "require-dev": {
    "cline/coding-standard": "^1.5.7",
    "ergebnis/composer-normalize": "^2.49@dev",
    "geoip2/geoip2": "^3.3",
    "orchestra/testbench": "^10.8",
    "pestphp/pest": "^4.1.6",
    "pestphp/pest-plugin-laravel": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0.3",
    "symfony/var-dumper": "^7.4.0"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Cline\\Suspend\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "aliases": {
        "Suspend": "Cline\\Suspend\\Facades\\Suspend"
      },
      "providers": [
        "Cline\\Suspend\\SuspendServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": "ecs check --fix",
    "refactor": "rector",
    "test": [
      "@test:lint",
      "@test:type-coverage",
      "@test:unit",
      "@test:types",
      "@test:refactor"
    ],
    "test:lint": "ecs check",
    "test:refactor": "rector --dry-run",
    "test:type-coverage": "pest --parallel --min=90 --type-coverage",
    "test:types": "phpstan",
    "test:unit": "pest --parallel --min=90 --coverage"
  }
}
